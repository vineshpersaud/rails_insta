
<div id="signup_form">
    <%= form_for @user, url: users_create_path  do |f|%>

        <%= f.text_field :username ,  placeholder: "Username"%><br><br>

        <%= f.text_field :firstname ,  placeholder: "Firstname" %><br><br>
    

        <%= f.text_field :lastname , placeholder: "Lastname"%><br><br>
    
        <%= f.text_field :email , placeholder: "E-Mail"%><br><br>

        <%= f.text_field :password , placeholder: "Password" %><br><br>

        <%= f.text_field :password_confirmation , placeholder: "Confirm Password" %><br><br>

        <%= f.submit id: "sign_up"%>    
    <%end%>
</div>